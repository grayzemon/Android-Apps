<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/number_converted_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/currency_conversion_rate"
        android:inputType="number"
        android:text="@string/rate"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintEnd_toEndOf="@+id/button_convert"
        app:layout_constraintStart_toStartOf="@+id/button_convert"
        app:layout_constraintTop_toBottomOf="@+id/button_convert"
        tools:text="Rate:" />

    <Button
        android:id="@+id/button_convert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/button_convert"
        app:layout_constraintEnd_toEndOf="@+id/spinner_convert_to"
        app:layout_constraintStart_toStartOf="@+id/spinner_convert_to"
        app:layout_constraintTop_toBottomOf="@+id/spinner_convert_to" />

    <Spinner
        android:id="@+id/spinner_convert_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_convert_from"
        app:layout_constraintStart_toStartOf="@+id/spinner_convert_from"
        app:layout_constraintTop_toBottomOf="@+id/spinner_convert_from" />

    <EditText
        android:id="@+id/number_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/currency_input"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_convert_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/number_amount"
        app:layout_constraintStart_toStartOf="@+id/number_amount"
        app:layout_constraintTop_toBottomOf="@+id/number_amount" />
</android.support.constraint.ConstraintLayout>